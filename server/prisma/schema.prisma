// =============================================
// GENERATOR & DATASOURCE
// =============================================
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// =============================================
// FINANCE — ACCOUNT
// =============================================
model Account {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  type          String
  balance       Float         @default(0)
  accountNumber String?
  bankName      String?
  branch        String?
  status        String        @default("active")
  companyName   String        // Multi-tenancy
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  transactions  Transaction[]
  
  @@index([companyName])
}

// =============================================
// FINANCE — TRANSACTION
// =============================================
model Transaction {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  type          String
  amount        Float
  description   String
  date          DateTime   @default(now())
  category      String
  reference     String?
  status        String     @default("paid")  // paid, pending, rejected
  paymentMethod String?

  accountId     String     @db.ObjectId
  account       Account    @relation(fields: [accountId], references: [id])

  createdBy     String     @db.ObjectId
  user          User       @relation(fields: [createdBy], references: [id])

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

// =============================================
// USER MODEL (AUTH)
// =============================================
model User {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  firstName     String
  lastName      String
  email         String          @unique
  password      String
  companyName   String          // Always set to email for data isolation (unique per user)
  displayCompanyName String?    // The actual company name entered by user for display
  plan          String          @default("Starter")
  role          String          @default("user")
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  notifications Notification[]
  tasks         Task[]
  orders        Order[]
  payments      Payment[]
  chatHistories ChatHistory[]
  aiInteractions AIInteraction[]
  employees     Employee[]      @relation("EmployeeManager")
  managedTasks  Task[]          @relation("TaskManager")
  transactions  Transaction[]
  subscription  Subscription?
}

// =============================================
// EMPLOYEE (HR MODULE)
// =============================================
model Employee {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  firstName        String
  lastName         String
  email            String
  phone            String?
  position         String
  department       String
  salary           Float
  hireDate         DateTime
  status           String    @default("active")
  address          String?
  emergencyContact String?
  bankInfo         String?
  taxInfo          String?
  profileImage     String?   // Employee photo
  companyName      String    // Multi-tenancy

  managerId        String?   @db.ObjectId
  manager          User?     @relation("EmployeeManager", fields: [managerId], references: [id])

  tasks            Task[]    @relation("TaskAssignment")

  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  @@unique([email, companyName])  // Email unique per company
  @@index([companyName])
}

// =============================================
// TASK MANAGEMENT
// =============================================
model Task {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  description   String?
  status        String    @default("pending")
  priority      String    @default("medium")
  dueDate       DateTime?
  assignedToId  String?   @db.ObjectId
  assignedTo    Employee? @relation("TaskAssignment", fields: [assignedToId], references: [id])

  createdById   String    @db.ObjectId
  createdBy     User      @relation("TaskManager", fields: [createdById], references: [id])

  userId        String?   @db.ObjectId
  user          User?     @relation(fields: [userId], references: [id])

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([status], name: "task_status_idx")
}

// =============================================
// INVENTORY
// =============================================
model InventoryItem {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String?
  sku           String
  quantity      Int           @default(0)
  unit          String
  price         Float
  cost          Float
  category      String?
  supplier      String?
  reorderLevel  Int           @default(10)
  location      String?
  barcode       String?
  image         String?
  companyName   String        // Multi-tenancy
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  orderItems    OrderItem[]

  @@unique([sku, companyName], name: "inventory_sku_company_unique")
  @@index([category], name: "inventory_category_idx")
  @@index([companyName])
}

// =============================================
// ORDER MODEL
// =============================================
model Order {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber   String        @unique
  customerName  String
  customerEmail String?
  customerPhone String?

  status        String        @default("pending")
  totalAmount   Float
  taxAmount     Float         @default(0)
  discount      Float         @default(0)

  paymentStatus String        @default("unpaid")
  paymentMethod String?

  createdById   String        @db.ObjectId
  createdBy     User          @relation(fields: [createdById], references: [id])

  items         OrderItem[]
  payments      Payment[]

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([status], name: "order_status_idx")
  @@index([paymentStatus], name: "order_payment_status_idx")
}

// =============================================
// ORDER ITEM
// =============================================
model OrderItem {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId

  orderId       String        @db.ObjectId
  order         Order         @relation(fields: [orderId], references: [id])

  itemId        String        @db.ObjectId
  item          InventoryItem @relation(fields: [itemId], references: [id])

  quantity      Int
  unitPrice     Float
  totalPrice    Float
  notes         String?

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

// =============================================
// PAYMENTS (CHAPA)
// =============================================
model Payment {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId

  userId        String?   @db.ObjectId  // Made optional for guest payments
  user          User?     @relation(fields: [userId], references: [id])

  amount        Float
  currency      String    @default("ETB")
  txRef         String    @unique
  status        String    @default("pending")  // pending, success, failed
  paymentMethod String?   // telebirr, mpesa, cbe, card
  gateway       String    @default("mpesa")  // mpesa, chapa

  orderId       String?   @db.ObjectId
  order         Order?    @relation(fields: [orderId], references: [id])

  type          String    @default("order")  // order, subscription, upgrade, registration
  subscriptionId String?  @db.ObjectId
  subscription  Subscription? @relation(fields: [subscriptionId], references: [id])

  // Link to Transaction for accounting
  transactionId String?   @db.ObjectId
  
  // M-Pesa specific fields
  mpesaReceiptNumber String?
  phoneNumber   String?
  
  // Verification status
  verified      Boolean   @default(false)
  verifiedAt    DateTime?

  metadata      Json?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
  @@index([status])
  @@index([type])
  @@index([gateway])
  @@index([verified])
}

// =============================================
// SUBSCRIPTIONS & BILLING
// =============================================
model Subscription {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId

  userId        String    @unique @db.ObjectId
  user          User      @relation(fields: [userId], references: [id])

  plan          String    @default("Starter")  // Starter, Growth, Enterprise
  status        String    @default("active")   // active, cancelled, expired, pending
  
  billingCycle  String    @default("monthly")  // monthly, yearly
  amount        Float     // Monthly/yearly amount
  
  startDate     DateTime  @default(now())
  renewalDate   DateTime  // Next billing date
  cancelledAt   DateTime?
  
  autoRenew     Boolean   @default(true)
  paymentMethod String?   // telebirr, cbe, card
  
  payments      Payment[]
  invoices      Invoice[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([status])
  @@index([renewalDate])
}

// =============================================
// INVOICES
// =============================================
model Invoice {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId

  subscriptionId String   @db.ObjectId
  subscription  Subscription @relation(fields: [subscriptionId], references: [id])

  invoiceNumber String    @unique
  amount        Float
  tax           Float     @default(0)
  total         Float
  
  status        String    @default("unpaid")  // unpaid, paid, overdue, cancelled
  dueDate       DateTime
  paidDate      DateTime?
  
  description   String?
  notes         String?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([status])
  @@index([dueDate])
}

// =============================================
// CHAT HISTORY
// =============================================
model ChatHistory {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  userId        String    @db.ObjectId
  user          User      @relation(fields: [userId], references: [id])

  role          String
  content       String
  timestamp     DateTime  @default(now())
}

// =============================================
// AI INTERACTIONS LOG
// =============================================
model AIInteraction {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  userId        String    @db.ObjectId
  user          User      @relation(fields: [userId], references: [id])

  input         String
  output        String
  metadata      Json?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
  @@index([createdAt])
}

// =============================================
// NOTIFICATIONS
// =============================================
model Notification {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  userId        String    @db.ObjectId
  user          User      @relation(fields: [userId], references: [id])

  title         String
  message       String
  type          String
  isRead        Boolean   @default(false)
  link          String?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// =============================================
// PARTNER REQUESTS
// =============================================
model PartnerRequest {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  company       String
  email         String
  type          String    // 'reseller', 'integrator', 'investor', etc.
  message       String?
  status        String    @default("pending")  // pending, approved, rejected

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
  @@index([status])
}

// =============================================
// MODULE SETTINGS
// =============================================
model ModuleSettings {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  companyName   String    @unique  // One settings per company
  enabledModules Json     // Array of enabled module IDs

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// =============================================
// ORGANIZATION SETTINGS
// =============================================
model OrganizationSettings {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  companyName   String    @unique
  tinNumber     String?
  businessType  String?
  industry      String?
  address       String?
  phone         String?
  email         String?
  currency      String    @default("ETB")
  timezone      String    @default("Africa/Addis_Ababa")
  dateFormat    String    @default("DD/MM/YYYY")
  vatRate       Float     @default(15)
  withholdingTax Float    @default(2)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// =============================================
// CRM - LEADS
// =============================================
model Lead {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  company       String?
  email         String
  phone         String?
  status        String    @default("Cold")  // Hot, Warm, Cold
  value         Float?
  source        String?
  notes         String?
  lastContact   DateTime?
  companyName   String    // Multi-tenancy
  userId        String    @db.ObjectId

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([companyName])
  @@index([status])
}

// =============================================
// MARKETING - CAMPAIGNS
// =============================================
model Campaign {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  status        String    @default("Draft")  // Draft, Active, Scheduled, Completed
  type          String    @default("Email")  // Email, SMS, Social
  sent          Int       @default(0)
  opened        Int       @default(0)
  clicked       Int       @default(0)
  conversions   Int       @default(0)
  scheduledDate DateTime?
  companyName   String    // Multi-tenancy
  userId        String    @db.ObjectId

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([companyName])
  @@index([status])
}

// =============================================
// PROCUREMENT - PURCHASE ORDERS
// =============================================
model PurchaseOrder {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber   String    @unique
  supplier      String
  status        String    @default("Pending")  // Pending, Approved, Received, Cancelled
  totalAmount   Float
  items         Json      // Array of items
  deliveryDate  DateTime?
  notes         String?
  companyName   String    // Multi-tenancy
  userId        String    @db.ObjectId

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([companyName])
  @@index([status])
}

// =============================================
// EXPENSES
// =============================================
model Expense {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  amount        Float
  category      String
  status        String    @default("Pending")  // Pending, Approved, Rejected
  date          DateTime  @default(now())
  receipt       String?   // File URL
  description   String?
  employeeId    String?   @db.ObjectId
  companyName   String    // Multi-tenancy
  userId        String    @db.ObjectId

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([companyName])
  @@index([status])
}

// =============================================
// PAYROLL
// =============================================
model Payroll {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  employeeId    String    @db.ObjectId
  month         String    // Format: YYYY-MM
  basicSalary   Float
  allowances    Float     @default(0)
  deductions    Float     @default(0)
  tax           Float     @default(0)
  netSalary     Float
  status        String    @default("Pending")  // Pending, Processed, Paid
  paymentDate   DateTime?
  companyName   String    // Multi-tenancy
  userId        String    @db.ObjectId

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([companyName])
  @@index([employeeId])
  @@index([month])
}

// =============================================
// NOTIFICATION SETTINGS
// =============================================
model NotificationSettings {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  userId        String    @unique @db.ObjectId
  emailNotifications Json  // Object with notification types
  inAppNotifications Json  // Object with notification types

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// =============================================
// INTEGRATIONS
// =============================================
model Integration {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  companyName   String
  name          String    // chapa, google, slack, etc.
  status        String    @default("disconnected")  // connected, disconnected
  apiKey        String?
  config        Json?     // Additional configuration
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([companyName, name])
  @@index([companyName])
}

// =============================================
// ROLES (Per Company)
// =============================================
model Role {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String    // Admin, Manager, User, Viewer, or custom
  description   String?
  permissions   String[]  // Array of permission strings
  isDefault     Boolean   @default(false)  // Default roles can't be deleted
  companyName   String
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([name, companyName])
  @@index([companyName])
}

// =============================================
// TEAM MEMBERS (Users per Company)
// =============================================
model TeamMember {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  userId        String?   @db.ObjectId  // Link to User if registered
  email         String
  name          String
  role          String    @default("User")  // Admin, Manager, User, Viewer
  status        String    @default("Pending")  // Active, Pending, Inactive
  permissions   Json?     // Custom permissions override
  invitedBy     String    @db.ObjectId
  companyName   String
  lastActive    DateTime?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([email, companyName])
  @@index([companyName])
}

// =============================================
// KNOWLEDGE BASE ARTICLES
// =============================================
model KnowledgeArticle {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  content       String
  category      String
  tags          String[]
  views         Int       @default(0)
  isPublic      Boolean   @default(true)
  companyName   String?   // null = global article
  authorId      String    @db.ObjectId

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([category])
  @@index([companyName])
}

// =============================================
// AUDIT LOG
// =============================================
model AuditLog {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  action        String    // create, update, delete, login, etc.
  entity        String    // user, order, payment, etc.
  entityId      String?
  details       Json?
  userId        String    @db.ObjectId
  companyName   String
  ipAddress     String?

  createdAt     DateTime  @default(now())

  @@index([companyName])
  @@index([userId])
  @@index([createdAt])
}

// =============================================
// COMPANY ACCESS CODES (For Role Registration)
// =============================================
model CompanyAccessCode {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  companyName   String
  role          String    // Admin, Manager
  code          String    // Hashed access code
  createdBy     String    @db.ObjectId
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([companyName, role])
  @@index([companyName])
}
